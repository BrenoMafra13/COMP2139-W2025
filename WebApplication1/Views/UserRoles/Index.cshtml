@model IEnumerable<UserRolesViewModel>

<h1>User Roles</h1>
<table class="table">
    <thead>
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Roles</th>
        <th>Action</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.FirstName</td>
            <td>@user.LastName</td>
            <td>@user.Email</td>
            <td>@string.Join(", ", user.Roles)</td>
            <td>
                <a href="@Url.Action("Manage", "UserRoles", new { userId = user.UserId })" class="btn btn-primary">Manage Roles</a>
            </td>
        </tr>
    }

    </tbody>
</table>
