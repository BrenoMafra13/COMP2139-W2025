@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

<h2>Roles</h2>
<table class="table">
    <thead>
    <tr>
        <th>Role Name</th>
        <th>Description</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var role in Model)
    {
        <tr>
            <td>@role.Name</td>
            <td>
                @{
                    var description = role.Name switch
                    {
                        "SuperAdmin" => "Full system access. Can manage users, roles, and settings.",
                        "Test" => "Can manage tests, projects and users, but not system settings.",
                        "Executor" => "Can access and manage their assigned tasks.",
                        "Manager" => "Can manage team tasks and monitor progress.",
                        _ => "Custom role with specific permissions."
                    };
                }
                @description
            </td>
        </tr>
    }
    </tbody>
</table>
