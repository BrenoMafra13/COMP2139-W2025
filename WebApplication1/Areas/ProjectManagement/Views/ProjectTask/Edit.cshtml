@model ProjectTask

@{
    ViewBag.Title = "Edit Project Task";
    Layout = "_Layout";
    ViewData["Edit"] = "Edit Project Task";
}

<h2>Edit Project Task</h2>

<form asp-action="Edit" method="post">
    
    <!-- Hidden field to ensure the ProjectID (Primary key) is included in the form
    submission link in the data to the correct record in the database -->
    @Html.HiddenFor(model => model.ProjectTaskId)
    @Html.HiddenFor(model => model.ProjectId)
    
    <div class="form-group">
        <label asp-for="Title" class="control-label"></label>
        <input asp-for="Title" class="form-control"/>
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <!-- Include other form fields here -->

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary"/>
        <a asp-action="Index" asp-controller="ProjectTask" asp-route-projectId="@Model.ProjectId" class="btn btn-secondary">Back to List</a>
    </div>

</form>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}